{
	"name": "PL_Parameterized",
	"properties": {
		"activities": [
			{
				"name": "LookupTables",
				"type": "Lookup",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderStoredProcedureName": "[dbo].[spGetTables]"
					},
					"dataset": {
						"referenceName": "DS_ASQL_Generic",
						"type": "DatasetReference",
						"parameters": {
							"DSSecretName": {
								"value": "@pipeline().parameters.SourceSecretName",
								"type": "Expression"
							},
							"DSTableName": "None"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "ForEachTable",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "LookupTables",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"typeProperties": {
					"items": {
						"value": "@activity('LookupTables').output.value",
						"type": "Expression"
					},
					"isSequential": false,
					"activities": [
						{
							"name": "CopyTablesADLStoASQL",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "TruncaeTargetTable",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureDataLakeStoreReadSetting",
										"recursive": false,
										"wildcardFileName": {
											"value": "@{concat(item().TableName,'.tsv')}",
											"type": "Expression"
										},
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSetting"
									}
								},
								"sink": {
									"type": "AzureSqlSink"
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_ADLS",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "DS_ASQL_Generic",
									"type": "DatasetReference",
									"parameters": {
										"DSSecretName": {
											"value": "@pipeline().parameters.DestinationSecretName",
											"type": "Expression"
										},
										"DSTableName": {
											"value": "@item().TableName",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "TruncaeTargetTable",
							"type": "SqlServerStoredProcedure",
							"dependsOn": [
								{
									"activity": "CopyTablesASQLtoADLS",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"storedProcedureName": "sys.sp_executesql",
								"storedProcedureParameters": {
									"statement": {
										"value": {
											"value": "@concat('TRUNCATE TABLE ',item().TableName)",
											"type": "Expression"
										},
										"type": "string"
									}
								}
							},
							"linkedServiceName": {
								"referenceName": "LS_ASQL_Generic",
								"type": "LinkedServiceReference",
								"parameters": {
									"SecretName": {
										"value": "@pipeline().parameters.DestinationSecretName",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "CopyTablesASQLtoADLS",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureDataLakeStoreWriteSetting"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSetting",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_ASQL_Generic",
									"type": "DatasetReference",
									"parameters": {
										"DSSecretName": {
											"value": "@pipeline().parameters.SourceSecretName",
											"type": "Expression"
										},
										"DSTableName": {
											"value": "@item().TableName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DS_ADLS",
									"type": "DatasetReference"
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"sourceSecretName": {
				"type": "string",
				"defaultValue": "sourceconnstr"
			},
			"DestinationSecretName": {
				"type": "string",
				"defaultValue": "destinationconnstr"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}